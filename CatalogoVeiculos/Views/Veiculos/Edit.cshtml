@model CatalogoVeiculos.Models.Veiculo

@{
    ViewData["Title"] = "Alterar Dados";
}

<h1>Alterar Dados do Veículo</h1>

<h4>Veiculo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Renavam" class="control-label"></label>
                <input asp-for="Renavam" class="form-control" />
                <span asp-validation-for="Renavam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagem">Carregue uma imagem</label>
                <input type="file" class="form-control-file" id="imagem">
            </div>
            

            <div class="form-group form-check">
                <input asp-for="Bloqueado" type="checkbox" class="form-check-input">
                <label asp-for="Bloqueado" class="form-check-label">Bloqueado</label>
            </div>
            <br />
            
            <button type="submit" class="btn btn-primary">Gravar</button>
            <a class="btn btn-secondary" asp-controller="Veiculos" asp-action="Index" role="button">Voltar</a>

        </form>
    </div>
</div>

